    </androidx.core.widget.NestedScrollView>

    <ImageView
        android:id="@+id/song_like_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_my_like_off"
        app:layout_constraintStart_toStartOf="@id/nestedScrollView"
        app:layout_constraintTop_toBottomOf="@+id/nestedScrollView" />

    <ImageView
        android:id="@+id/song_like_on_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_my_like_on"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/nestedScrollView"
        app:layout_constraintTop_toBottomOf="@+id/nestedScrollView" />


    <ImageView
        android:id="@+id/song_unlike_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/btn_player_unlike_off"
        app:layout_constraintEnd_toEndOf="@id/nestedScrollView"
        app:layout_constraintTop_toBottomOf="@id/nestedScrollView" />

    <ImageView
        android:id="@+id/song_unlike_on_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/btn_player_unlike_on"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/nestedScrollView"
        app:layout_constraintTop_toBottomOf="@id/nestedScrollView" />

    <SeekBar
        android:id="@+id/song_play_line_ml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@null"
        android:progress="0"
        android:progressTint="#4F44F4"
        android:thumb="@android:color/transparent"
        android:max="100000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nestedScrollView" />

    <TextView
        android:id="@+id/song_start_tome_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="00:00"
        android:textColor="#919497"
        app:layout_constraintStart_toStartOf="@id/song_play_line_ml"
        app:layout_constraintTop_toBottomOf="@id/song_play_line_ml" />

    <TextView
        android:id="@+id/song_end_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="01:00"
        android:textColor="#919497"
        app:layout_constraintEnd_toEndOf="@id/song_play_line_ml"
        app:layout_constraintTop_toBottomOf="@id/song_play_line_ml" />

    <ImageButton
        android:id="@+id/song_repeat_inactive_ib"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/nugu_btn_repeat_inactive"
        app:layout_constraintStart_toStartOf="@id/song_start_tome_tv"
        app:layout_constraintTop_toBottomOf="@id/song_start_tome_tv" />

    <ImageButton
        android:id="@+id/song_random_inactive_ib"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/nugu_btn_random_inactive"
        app:layout_constraintEnd_toEndOf="@id/song_end_time_tv"
        app:layout_constraintTop_toBottomOf="@id/song_end_time_tv" />

    <ImageButton
        android:id="@+id/song_skip_next_ib"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/nugu_btn_skip_next_32"
        app:layout_constraintBottom_toBottomOf="@id/song_random_inactive_ib"
        app:layout_constraintEnd_toStartOf="@id/song_random_inactive_ib"
        app:layout_constraintTop_toTopOf="@id/song_random_inactive_ib" />

    <ImageButton
        android:id="@+id/song_skip_preview_ib"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:background="@drawable/nugu_btn_skip_previous_32"
        app:layout_constraintBottom_toBottomOf="@id/song_repeat_inactive_ib"
        app:layout_constraintStart_toEndOf="@id/song_repeat_inactive_ib"
        app:layout_constraintTop_toTopOf="@id/song_repeat_inactive_ib" />

    <ImageButton
        android:id="@+id/song_pause_bt"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/nugu_btn_pause_32"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/song_skip_preview_ib"
        app:layout_constraintEnd_toEndOf="@id/song_skip_next_ib"
        app:layout_constraintStart_toStartOf="@id/song_skip_preview_ib"
        app:layout_constraintTop_toTopOf="@id/song_skip_preview_ib" />

    <ImageButton
        android:id="@+id/song_play_bt"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/btn_player_play"
        app:layout_constraintBottom_toBottomOf="@id/song_skip_preview_ib"
        app:layout_constraintEnd_toEndOf="@id/song_skip_next_ib"
        app:layout_constraintStart_toStartOf="@id/song_skip_preview_ib"
        app:layout_constraintTop_toTopOf="@id/song_skip_preview_ib" />

    <ImageButton
        android:id="@+id/song_instagram_ib"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_actionbar_instagram"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/song_repeat_inactive_ib" />

    <ImageButton
        android:id="@+id/song_player_go_list_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_player_go_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/song_random_inactive_ib" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:background="@drawable/btn_player_related"
        app:layout_constraintBottom_toBottomOf="@id/song_instagram_ib"
        app:layout_constraintEnd_toEndOf="@id/song_player_go_list_btn"
        app:layout_constraintStart_toStartOf="@id/song_instagram_ib"
        app:layout_constraintTop_toTopOf="@id/song_instagram_ib" />


</androidx.constraintlayout.widget.ConstraintLayout>