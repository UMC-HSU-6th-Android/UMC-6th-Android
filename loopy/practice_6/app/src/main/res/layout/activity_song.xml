<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SongActivity">

    <ImageButton
        android:id="@+id/song_drop_button_ibt"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/ic_drop_down"
        android:contentDescription="TODO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/song_setting_button_ibt"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:background="@drawable/btn_player_setting"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toBottomOf="@id/song_drop_button_ibt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/song_drop_button_ibt" />

    <ImageButton
        android:id="@+id/song_eq_button_ibt"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:background="@drawable/btn_player_eq_off"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toBottomOf="@id/song_drop_button_ibt"
        app:layout_constraintStart_toEndOf="@id/song_setting_button_ibt"
        app:layout_constraintTop_toTopOf="@id/song_drop_button_ibt" />

    <ImageButton
        android:id="@+id/song_over_flow_button_ibt"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:background="@drawable/over_flow_menu"
        app:layout_constraintEnd_toEndOf="@id/song_drop_button_ibt"
        app:layout_constraintStart_toStartOf="@id/song_drop_button_ibt"
        app:layout_constraintTop_toBottomOf="@id/song_drop_button_ibt" />

    <TextView
        android:id="@+id/song_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="제목"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/song_over_flow_button_ibt" />

    <TextView
        android:id="@+id/song_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="가수"
        android:textColor="#919497"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/song_title_tv" />

    <ImageButton
        android:id="@+id/song_arrows_btn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/btn_main_arrow_more"
        app:layout_constraintBottom_toBottomOf="@id/song_singer_tv"
        app:layout_constraintStart_toEndOf="@id/song_singer_tv"
        app:layout_constraintTop_toTopOf="@id/song_singer_tv" />

    <ImageView
        android:id="@+id/song_profile_music_iv"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/lilac"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/song_arrows_btn" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/song_profile_music_iv">

