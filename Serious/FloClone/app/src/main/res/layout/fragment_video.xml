    <TextView
        android:id="@+id/recent_list_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최신순"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/MV_iv"
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        android:src="@drawable/img_video_exp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/recent_list_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/MV_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[MV] Coin"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/MV_iv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/MV_artist_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이유 (IU)"
        android:textSize="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/MV_name_tv"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>